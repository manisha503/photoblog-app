<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingTop="1dip"
  android:paddingBottom="1dip"
  android:paddingLeft="2dip"
  android:paddingRight="2dip">
  <RelativeLayout
    android:id="@+id/thumb_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="2dip"
    android:layout_centerVertical="true">
    <include layout="@layout/blog_thumbnail" />
  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/thumb_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/thumb_1"
    android:layout_marginLeft="2dip"
    android:layout_centerVertical="true">
    <include layout="@layout/blog_thumbnail" />
  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/thumb_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/thumb_2"
    android:layout_marginLeft="2dip"
    android:layout_centerVertical="true">
    <include layout="@layout/blog_thumbnail" />
  </RelativeLayout>
  <RelativeLayout
    android:id="@+id/thumb_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/thumb_3"
    android:layout_marginLeft="2dip"
    android:layout_centerVertical="true">
    <include layout="@layout/blog_thumbnail" />
  </RelativeLayout>
</RelativeLayout>
